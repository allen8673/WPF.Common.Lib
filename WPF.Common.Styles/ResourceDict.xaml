<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPF.Common.Styles">
    <FontFamily x:Key="SourceHanSansTC">pack://application:,,,/Resource/Fonts/SourceHanSansTC/#SourceHanSansTC</FontFamily>
    <FontFamily x:Key="SourceHanSansHWTC">pack://application:,,,/Resource/Fonts/SourceHanSansHWTC/#SourceHanSansHWTC</FontFamily>
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource SourceHanSansHWTC}"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>
</ResourceDictionary>